<Window x:Class="VegoCityManagment.Shared.Components.VegoMessageDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VegoCityManagment.Shared.Components"
        mc:Ignorable="d"
        Title=""
        WindowStartupLocation="CenterScreen"
        SizeToContent="Width"
        Height="150"
        MinWidth="300"
        ResizeMode="NoResize"
        FontFamily="{StaticResource Exo2}"
        FontSize="14"
        Style="{StaticResource VegoWindow}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="10,20,10,5"
            TextAlignment="Center"
            VerticalAlignment="Center"
            TextWrapping="Wrap"
            x:Name="MessageTextBlock"/>

        <Grid
            x:Name="OkButton"
            Grid.Row="1"
            Margin="10">
            <Button
                Content="Ок"
                Style="{StaticResource GreenButton12px}"
                MaxWidth="150"
                Click="Button_Click" Cursor="Hand"/>
        </Grid>
    </Grid>
</Window>
